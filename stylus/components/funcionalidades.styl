.Funcionalidades
	table
		text-align center
		th
			text-align center
			&:nth-child(2),&:nth-child(4)
				background $funcionalidadesNormalHeader
			&:nth-child(3)
				background $funcionalidadesResaltarHeader
		tr
			td
				&:first-child
					text-align left
				&:nth-child(2),&:nth-child(4)
					background $funcionalidadesNormal
				&:nth-child(3)
					background $funcionalidadesResaltar
	a
		color: #fff;
		padding: 0.4em 1.2em;
		font-weight: 500;
		background $verdeProgress
		&:hover,&:focus
			text-decoration none
			background #FFF
			color $verdeProgress
