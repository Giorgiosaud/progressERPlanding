.Beneficio__Contenido {
	display: flex;
	flex-direction: column;
	}

.Beneficio__titulo {
	font-weight: 700;
	margin: 2em 0 1em 0;
}
.Beneficio__Descripcion{
	display flex
	flex-direction column
	align-items center
	justify-content center
}
.Beneficio__Descripcion__icono {
    flex: 1;
    margin: 2em;
}
.Beneficio__Descripcion__texto {
	flex: 6;
	ul{
		list-style none
		padding 0
		margin 0
		li{
			&:before{
				content:'\2013'
				margin-right 1em
			}
		}
	}
}
@media(min-width:640px){
	.Beneficio__Descripcion{
		flex-direction row	
	}
}
